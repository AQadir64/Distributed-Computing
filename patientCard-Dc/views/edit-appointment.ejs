<div id="wrapper">
  <%- include ('./partials/sidebar') %>
  <div id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
          <h1>Appointment</h1>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->
  <% if (message) { %>
  <p class="text-center text-danger"><%= message %></p>
  <% } %> <% if (appoint) { %>
  <form
    class="add-patient-form"
    action=""
    method="post"
    enctype="multipart/form-data"
  >
    <div class="form-row">
      <div class="form-group col-md-4">
        <input
          type="text"
          class="form-control"
          name="p_username"
          id="p_username"
          placeholder="Patient User Name"
          required
        />
      </div>
      <div class="form-group col-md-4">
        <input
          type="text"
          class="form-control"
          name="d_username"
          id="d_username"
          placeholder="Doctor User Name"
          required
        />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <input
          type="date"
          class="form-control"
          name="date"
          id="date"
          placeholder="Date"
          required
        />
      </div>
    </div>
    <button type="submit" class="btn btn-success float-right">
      Update Appointment
    </button>
  </form>
  <% } else { %>
  <p class="text-center">
    doctor Not Found. Go <a href="/dashboard/Add-doctpr">here</a> to add doctor.
  </p>
  <% } %>
</div>
