<div id="wrapper">
        <%- include ('./partials/sidebar') %>
        <div id="page-wrapper">
          <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row" id="main">
              <div class="col-sm-12 col-md-12 well" id="content">
                <h1>doctor</h1>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
        <div>
              <% if (message != '') { %>
                  <p class="text-center text-danger"><%= message %></p>
              <% } %>
              <form class="add-doctor-form" action="" method="post" enctype="multipart/form-data">
                  <div class="form-row">
                      <div class="form-group col-md-4">
                          <input type="text" class="form-control" name="firstname" id="first-name" placeholder="First Name" required>
                      </div>
                      <div class="form-group col-md-4">
                          <input type="text" class="form-control" name="lastname" id="last-name" placeholder="Last Name" required>
                      </div>
                      <div class="form-group col-md-4">
                          <input type="text" class="form-control" name="d_username" id="d_username" placeholder="User Name" required>
                      </div>
                  </div>
                  <div class="form-row">
                      <div class="form-group col-md-4">
                          <input type="text" class="form-control" name="specialist" id="specialist" placeholder="specialist" required>
                      </div>  
                    <div class="form-group col-md-4">
                          <input type="number" class="form-control" name="contact" id="contact" placeholder="Contact" required>
                      </div>
                      <div class="form-group col-md-4">
                              <input type="text" class="form-control" name="address" id="address" placeholder="Address" required>
                      </div>
                  </div>
                  <div class="form-row">
                  <div class="btn-group btn-group-toggle col-md-4">
                      <input type="radio" name="method" value="sync"> sync<br>
                      <input type="radio" name="method" value="async"> aysnc<br>
                  </div>
                  <div class="btn-group btn-group-toggle col-md-4">
                      <input type="radio" name="branch" value="Karachi (HQ)">Karachi (HQ)<br>
                      <input type="radio" name="branch" value="Hyderabad">Hyderabad<br>
                      <input type="radio" name="branch" value="Silicon Valley">Silicon Valley<br>
                  </div>
                </div>
                  <button type="submit" class="btn btn-primary float-left">Add Doctor</button>
              </form>
          </div>
      </div>
      </div>
      