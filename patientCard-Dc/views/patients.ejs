<div id="wrapper">
  <%- include ('./partials/sidebar') %>
  <div id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
          <h1>patients</h1>
          <a class="float-right" href="/dashboard/Add-patients" title="Add a New Player"
          >Add a Patient</a
        >
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->
  <div class="table-wrapper">
        <% if (patients.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Address</th>
                        <th scope="col">Branch</th>
                    </tr>
                </thead>
                <tbody>
                    <% patients.forEach((patient, index) => { %>
                        <tr>
                            <th scope="row"><%= patient.p_id %></th>
                            <td><%= patient.firstname %></td>
                            <td><%= patient.lastname %></td>
                            <td><%= patient.p_username %></td>
                            <td><%= patient.gender %></td>
                            <td><%= patient.contact %></td>
                            <td><%= patient.address %></td>
                            <td><%= patient.branch %></td>
                            <td>
                                <a href="/editPatient/<%= patient.contact %>" target="" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deletePatient/<%= patient.contact %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No patients found. Go <a href="/dashboard/Add-patients" >here</a> to add patients.</p>
        <% } %>
    </div>
</div>
</div>
