<div id="wrapper">
  <%- include ('./partials/sidebar') %>
  <div id="page-wrapper">
    <div class="container-fluid">
      <!-- Page Heading -->
      <div class="row" id="main">
        <div class="col-sm-12 col-md-12 well" id="content">
          <h1>Doctors</h1>
          <a
            class="float-right"
            href="/dashboard/Add-doctor"
            title="Add a New Player"
            >Add a Doctor</a
          >
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /#page-wrapper -->
  <div class="table-wrapper">
    <% if (doctor.length > 0) {%>
    <table class="table table-hovered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Specialist</th>
          <th scope="col">Contact</th>
          <th scope="col">Address</th>
        </tr>
      </thead>
      <tbody>
        <% doctor.forEach((dr, index) => { %>
        <tr>
          <th scope="row"><%= dr.d_id %></th>
          <td><%= dr.firstname %></td>
          <td><%= dr.lastname %></td>
          <td><%= dr.specialist %></td>
          <td><%= dr.contact %></td>
          <td><%= dr.address %></td>
          <td>
            <a
              href="/editDoctor/<%= dr.contact %>"
              target=""
              rel="noopener"
              class="btn btn-sm btn-success"
              >Edit</a
            >
            <a
              href="/deleteDoctor/<%= dr.contact %>"
              class="btn btn-sm btn-danger"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <p class="text-center">
      No doctors found. Go <a href="/dashboard/Add-doctor">here</a> to add
      patients.
    </p>
    <% } %>
  </div>
</div>
